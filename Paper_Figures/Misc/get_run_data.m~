function [H,C,A,N,lat,lon,time]= get_run_data(fileloc,lat_grid,lon_grid,Cbnd,Hbnd)

Cmin = Cbnd(1); 
Hmin = Hbnd(1); 
Hmax = Hbnd(2); 

H = ncread(fileloc,'hi'); 
C = ncread(fileloc,'aice'); 
A = permute(fileloc,'frachist'),[1 2 4 3]);


lat = repmat(lat_grid,[1 1 365]); 
lon = repmat(lon,[1 1 365]); 
time = repmat(permute(timer,[3 2 1]),[size(lat,1),size(lat,2)]); 


use = (H < Hmax & H > Hmin & C > Cmin & sum(A,4) > 1e-3);

H = H(use); 
C = C(use); 

A = reshape(A,[],12); 
A = A(use,:); 

N = round(24.*sum(A,2)); 
A = bsxfun(@rdivide,A,sum(A,2));

lat = lat(use); 
lon = lon(use); 
time = time(use); 